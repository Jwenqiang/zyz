/**index.wxss**/
.top{width: 100%;height: 400rpx}
.top image{width: 100%;height: 400rpx}

.content{padding: 40rpx;padding-bottom: 50px}
.conT{margin-bottom: 40rpx}
.section{
  margin-bottom: 80rpx;
}
.secMsg{
box-shadow: 0 0 14rpx #dedede;
border-radius: 10rpx;
overflow: hidden  
}
.secT{margin-bottom: 40rpx;color: #666}
.secNum{float: left;display: block;height: 40rpx;width: 240rpx}
.xjDate {
  clear: both;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  width: 430rpx;
  float: right;
  text-align: right;
  margin-top: -40rpx
}

.xjDate text {
  background: #000;
  padding: 2rpx 8rpx;
  color: #fff;
  margin: 0 6rpx;
  border-radius: 3px;
  font-weight: 400;
  font-size: 24rpx
}
.secImg{
  width: 100%;
  height: 420rpx;
}
.schTitle {
  padding-top: 20rpx;
  clear: both;
  color: #000;
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 20rpx
}

.schTitle text {
     line-height: 1.6;
     line-clamp: 2;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    display: -webkit-box;
    display: box;
    -webkit-box-orient: vertical;
    box-orient: vertical;
    overflow: hidden;
  font-size: 32rpx;
}
.secB{padding: 40rpx}
.secTip{font-size: 24rpx;color: #999;white-space: nowrap;text-overflow: ellipsis;overflow: hidden}
.secP{margin-top: 40rpx}
.spl{width: 400rpx;float: left}
.price{color: #999;margin-bottom: 20rpx}
.mainNum{color: #ff4631;font-size: 44rpx;margin: 0 10rpx;font-weight: bold}
progress {
width: 200rpx;
margin-top: 16rpx;
float: left;
margin-right: 20rpx
}
.spr{width: 190rpx;float: right}
.spr button{
  display: block;
  float: right;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  border: none;
  font-weight: bold;
  background: -webkit-linear-gradient(#fc7c75,#f63e37);
  background: -o-linear-gradient(#fc7c75,#f63e37);
  background: -moz-linear-gradient(#fc7c75,#f63e37);
  background: linear-gradient(#fc7c75,#f63e37);
  color: #fff;
  margin-top: 40rpx
}
.spr button.over{background: #ccc;}
