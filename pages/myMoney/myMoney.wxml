<view class="page">
  <view class="top">
    <view class="li">
      <label>总奖金(元)</label>
      <text>{{totalMoney}}</text>
    </view>
    <view class="li">
      <label>已发放(元)</label>
      <text>{{payMoney}}</text>    
    </view>
    <view class="li">
      <label>待发放(元)</label>
      <text>{{noMoney}}</text>    
    </view>
  </view>
  <view class="list">
    <view class="section" wx:for="{{list}}" wx:key="{{index}}">
      <view class="sect has" wx:if="{{item.Settlement}}">已发放</view>
      <view class="sect nohas" wx:else>待发放</view>
      <view class="secb">
        <image src="{{item.MainImg}}"></image>
        <view class='hifMsg'>
          <text class="name">{{item.Title}}</text>
          <view class='hifT'>
            <label>我的奖金:<text class="red">{{item.Amount}}元</text></label>
            <label>有效点击:<text class="red">{{item.UserClick}}次</text></label>
          </view>
        </view>
      </view>
      <!-- 已发放的才有 -->
      <view class="secf" wx:if="{{item.Settlement}}">
        <label>发放时间：{{item.SettlementTime}}</label>
        <label>入账账户：微信零钱</label>
      </view>
    </view>
  </view>
  
  <view style='text-align:center;width:100%;line-height:80rpx;color:#ccc;font-size:22rpx;' wx:if="{{no}}">
    到底了~
  </view>
  <!-- 无数据时 -->
  <view wx:if="{{list.length==0&&load}}" style="text-align:center;padding-top:500rpx;background:url(http://hfugweb.centaline.com.cn/img/smallR/img/noMsg.png) center no-repeat;background-size:320rpx;color:#999">
    <text>你还没有奖金记录哦~</text>
  </view>    

</view>
